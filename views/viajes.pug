extends ./layout/index

block contenido 
    h1 #{pagina}
    main.container.mt-5
        .row.proximos-viajes
            each viaje in viajes
                .col-md-6.col-lg-4.mb4
                    .card
                        img.card-img-top(src=`img/destinos_${viaje.imagen}.jpg`, alt=`${viaje.imagen}`)
                    .card-boddy
                        h2= viaje.titulo
                        p
                            svg.icon.icon-tabler.icon-tabler-calendar-event(xmlns='http://www.w3.org/2000/svg' width='44' height='44' viewbox='0 0 24 24' stroke-width='1.5' stroke='#dc1151' fill='none' stroke-linecap='round' stroke-linejoin='round')
                                path(stroke='none' d='M0 0h24v24H0z' fill='none')
                                path(d='M4 5m0 2a2 2 0 0 1 2 -2h12a2 2 0 0 1 2 2v12a2 2 0 0 1 -2 2h-12a2 2 0 0 1 -2 -2z')
                                path(d='M16 3l0 4')
                                path(d='M8 3l0 4')
                                path(d='M4 11l16 0')
                                path(d='M8 15h2v2h-2z')

                            | #{viaje.fecha_ida} - #{viaje.fecha_vuelta}
                        
                        p
                           | #{viaje.disponibles} Disponibles    